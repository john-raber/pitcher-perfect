<h1>Login</h1>

<%= render partial: "shared/errors", locals: {new_object: current_user} %>

<%= form_tag login_path do %>
  Name: <%= text_field_tag :'user[name]' %>

  <br><br>

  Password: <%= password_field_tag :'user[password]' %>

  <br>

  Confirm Password: <%= password_field_tag :'user[password_confirmation]' %>

  <br><br>

  <%= submit_tag 'Login' %>
<% end %>
