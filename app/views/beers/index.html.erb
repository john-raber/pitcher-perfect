<h1>Beers</h1>
<!-- <%= params.inspect %> -->
<%= render partial: 'shared/search', locals: {objects: "beers", object_name: "beer_name"} %>

<h3>Highest Rated Beer:</h3>



<ul>
  <% @beers.each do |b| %>
    <li>
      <%= link_to b.name, b %><br>
      Brewery: <%= link_to b.brewery.name, b.brewery  %><br>
      Style: <%= b.style.name %>
    </li>
    <br>
  <% end %>
</ul>
